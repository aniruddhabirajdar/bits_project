<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

      <h1 class="page-header">
        <%= @report.recommandation %> <%= @report.company.name %>
        <small>at <%=@report.target%></small>
      </h1>


      <!-- First Blog Post -->
      <h2>
        <%=link_to @report.title,@report.company%>
      </h2>
      <p class="lead">
        by <a href="index.php"><%=@report.user.email%></a>
      </p>
      <p><span class="glyphicon glyphicon-time"></span> Posted on <%=@report.created_at.strftime("%e %b %y")%></p>

      <p><%= @report.report_text %></p>


      <hr>


    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">



      <!-- Blog Categories Well -->
      <div class="well">
        <h4>Related Topics</h4>
        <div class="row">
          <div class="col-lg-12">
            <ul class="list-unstyled">
            <%@top_recommendations.each do |report|%>
              <li><%= link_to truncate(report.display_name ,:length => 50),report%> <%report.created_at.strftime("%b %y")%>
              </li>
             <%end%>
            </ul>
          </div>
          <!-- /.col-lg-6 -->

          <!-- /.col-lg-6 -->
        </div>
        <!-- /.row -->
      </div>

      <!-- Side Widget Well -->
