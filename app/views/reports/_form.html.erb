<%= simple_form_for report,html: { class: "form-horizontal"},defaults: { input_html: { class: 'form-control input-md' } } do |f| %>
    <form class="form-horizontal">
      <fieldset>

        <% if report.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(report.errors.count, "error") %> prohibited this company from being saved:</h2>

              <ul>
                <% report.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-2 control-label" for="textinput">Title</label>
          <div class="col-md-8">
            <%= f.input :title,label:false %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-2 control-label" for="textinput">Report</label>
          <div class="col-md-8">
            <%= f.input :report_text,label:false ,:input_html => {  :cols => 100, :rows => 25 } %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-2 control-label" for="textinput">Company</label>
          <div class="col-md-8">
            <%= f.association :company,label:false,selected: @company %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-2 control-label" for="textinput">Price</label>
          <div class="col-md-8">
            <%= f.input :recommandation,label:false %>
          </div>
        </div>







        <!-- Button (Double) -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput"></label>
          <div class="col-md-8">
            <%= f.button :submit, class:"btn btn-success" %>
            <%=link_to "Cancle",root_path,class:"btn btn-default"%>
          </div>
        </div>

      </fieldset>
<%end%>

